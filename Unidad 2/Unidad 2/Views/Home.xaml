<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Fondo}"
             x:Class="Unidad_2.Views.Home">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Image Source="rym.png" VerticalOptions="Center" Grid.Column="0"  Grid.Row="0"/>

            <StackLayout Grid.Column="0" Grid.Row="1"  Margin="20,30,20,70" Spacing="15">
                <Label Text="Bienvenidos"
                   TextColor="{StaticResource Secondary}"
                   FontSize="Title"
                HorizontalOptions="CenterAndExpand" 
                />
                <Button Style="{StaticResource BtnLogin}" Clicked="Button_Login"></Button>
                <Button Style="{StaticResource BtnRegistro}" Clicked="Button_Register"></Button>
            </StackLayout>

        </Grid>



    </ContentPage.Content>
</ContentPage>